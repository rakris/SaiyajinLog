<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="rbhat.saiyajinlog.ShowActivity">

    <LinearLayout
        android:id="@+id/show_activity_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/select_text"
            android:textSize="@dimen/activity_label_textsize" android:text="@string/select_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
        <Spinner
            android:id="@+id/exercises_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>


    <ListView android:id="@+id/show_listview" android:layout_marginTop="@dimen/show_item_header_marginTop"
        android:layout_width="match_parent" android:layout_below="@id/show_activity_top"
        android:layout_height="wrap_content" android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/listitem_spacing" android:headerDividersEnabled="true"/>

</RelativeLayout>
